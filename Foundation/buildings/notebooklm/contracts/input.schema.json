{
    "type": "object",
    "required": [
        "sources",
        "question"
    ],
    "properties": {
        "sources": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string"
            }
        },
        "question": {
            "type": "string",
            "minLength": 3
        },
        "driver": {
            "type": "string",
            "enum": [
                "mock",
                "autopilot"
            ],
            "description": "Execution driver. mock = deterministic stub, autopilot = notebook-booster."
        },
        "constraints": {
            "type": "object",
            "properties": {
                "max_words": {
                    "type": "integer",
                    "minimum": 50,
                    "maximum": 2000
                },
                "require_citations": {
                    "type": "boolean"
                }
            },
            "additionalProperties": true
        }
    },
    "additionalProperties": false
}